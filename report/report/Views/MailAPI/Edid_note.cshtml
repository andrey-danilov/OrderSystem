@model  report.Models.Note

   
@{ if (Model != null)
    {
        if (Model.flag)
        {
            @Ajax.ActionLink(Model.NoteName, "Edid_note", new { id = Model.Id }, new AjaxOptions { UpdateTargetId = "Note_" + Model.Id }, new { @style = "color: #00ff00; margin-right: 10px;" })
        }
        else
        {
            @Ajax.ActionLink(Model.NoteName, "Edid_note", new { id = Model.Id }, new AjaxOptions { UpdateTargetId = "Note_" + Model.Id }, new { @style = "color: #ff0000; margin-right: 10px;" })
        }
     }
}





    @section Scripts {
        @Scripts.Render("~/scripts/jquery-1.10.2.min.js")
        @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
    }
