@model report.Models.OrderProm

<div>
    @using (Ajax.BeginForm("CreatePV",new AjaxOptions { }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>OrderProm</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Id_User)




            @Html.EditorFor(model => model.Order_Number, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Order_Number, "", new { @class = "text-danger" })

            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })

            @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })

            @Html.EditorFor(model => model.TotalPrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TotalPrice, "", new { @class = "text-danger" })

            @Html.EditorFor(model => model.DeliveryInfo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DeliveryInfo, "", new { @class = "text-danger" })
            <input type="submit" value="Create" class="btn btn-default" />

            <div class="col-md-10">
                @for (var i = 0; i < Model.Products.Count; i++)
                {
                    <div>
                        @Html.DisplayFor(m => Model.Products[i].VendorCode, new { htmlAttributes = new { placeholder = "Код товара" } })
                        @Html.DisplayFor(m => Model.Products[i].Quantity, new { htmlAttributes = new { placeholder = "Количество" } })
                        @Html.DisplayFor(m => Model.Products[i].Name, new { htmlAttributes = new { } })
                        @Ajax.ActionLink("Delete", "DelFromTL", new { id = Model.Products[i].Id }, new AjaxOptions { UpdateTargetId = "CreatePV", InsertionMode = InsertionMode.Replace }, new { @style = "color: #ff0000;" })
                    </div>
                    <p></p>

                }
            </div>



        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
}
