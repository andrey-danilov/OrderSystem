@model  report.Models.Status

   
@{ 
        if (Model.flag)
        {
            @Ajax.ActionLink(Model.StatusName, "Edid_state", new { id = Model.Id }, new AjaxOptions { UpdateTargetId = "Status_" + Model.Id }, new { @style = "color: #00ff00; margin-right: 10px;" })
        }
        else
        {
            @Ajax.ActionLink(Model.StatusName, "Edid_state", new { id = Model.Id }, new AjaxOptions { UpdateTargetId = "Status_" + Model.Id }, new { @style = "color: #ff0000; margin-right: 10px;" })
        }
        
}





    @section Scripts {
        @Scripts.Render("~/scripts/jquery-1.10.2.min.js")
        @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
    }
