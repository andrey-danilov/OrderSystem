@model report.Models.SearchOrderProm

@using (Ajax.BeginForm("Search", "Index", new AjaxOptions { UpdateTargetId = "ListOrders",
                                                            InsertionMode = InsertionMode.Replace ,
                                                            LoadingElementId = "loading",
                                                            LoadingElementDuration = 1000}, 
                                                            htmlAttributes: new {  }))
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
    <h4>OrderProm</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

   
        <div  style="float:left; padding-right:15px;">
            @Html.EditorFor(model => model.Order_Number, new { htmlAttributes = new { @class = "form-control", placeholder = "Номер заказа",  style = "padding:0px;" } })
            @Html.ValidationMessageFor(model => model.Order_Number, "", new { @class = "text-danger" })
        </div>
        <div style="float:left; padding-right:15px;">
