            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
        </div>
    
        <div style="float:left; padding-right:15px;">
            @Html.EditorFor(model => model.TotalPrice, new { htmlAttributes = new { @class = "form-control", placeholder = "Стоимость заказа", style = "padding:0px;" } })
