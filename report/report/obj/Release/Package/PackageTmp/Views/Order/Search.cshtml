            @Html.ValidationMessageFor(model => model.WaybillNumber, "", new { @class = "text-danger" })
        </div>

        <div style="float:left; padding-right:15px;">
            @Html.EditorFor(model => model.DeliveryInfo, new { htmlAttributes = new { @class = "form-control", placeholder = "Адресс", style = "padding:0px;" } })
